{% extends 'base.html.twig' %}

{% block title %}Programme index{% endblock %}

{% block body %}
    <h1>Programme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomprogramme</th>
                <th>Idcoachp</th>
                <th>Dureeprogramme</th>
                <th>Evaluationprogramme</th>
                <th>Difficulteprogramme</th>
                <th>Listexercice</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for programme in programmes %}
            <tr>
                <td>{{ programme.id }}</td>
                <td>{{ programme.nomprogramme }}</td>
                <td>{{ programme.idcoachp }}</td>
                <td>{{ programme.dureeprogramme }}</td>
                <td>{{ programme.evaluationprogramme }}</td>
                <td>{{ programme.difficulteprogramme }}</td>
                <td>{{ programme.Listexercice ? programme.Listexercice|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_programme_show', {'id': programme.id}) }}">show</a>
                    <a href="{{ path('app_programme_edit', {'id': programme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_programme_new') }}">Create new</a>
{% endblock %}
