{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}
	<link rel="stylesheet" href="path/to/font-awesome/css/all.min.css">
	<style>


		/* Table style */
		.table {
			width: 100%;
			border-collapse: collapse;
		}

		.table th,
		.table td {
			padding: 10px;
			border: 1px solid #ddd;
		}

		/* Table header style */
		.table th {
			background-color: #f2f2f2;
			font-weight: bold;
		}

		/* Table body style */
		.table tbody td {
			background-color: #fff;
		}

		/* Nested table style */
		.nested-table {
			width: 100%;
			border-collapse: collapse;
			margin-top: 10px;
		}

		/* Nested table header style */
		.nested-table th {
			background-color: #f2f2f2;
			font-weight: bold;
			text-align: left;
		}

		/* Nested table body style */
		.nested-table td {
			padding: 8px;
			border-bottom: 1px solid #ddd;
		}

	</style><div style="margin-top:100px " class="page-title">Programme Details</div>

	<div class="container">

			<table class="table">
				<tbody>

					<tr>
						<th>Name</th>
						<td>{{ programme.Nomprogramme }}</td>
					</tr>
					<tr>
						<th>Duration</th>
						<td>{{ programme.Dureeprogramme }}</td>
					</tr>
					<tr>
						<th>Evaluation </th>
						<td>{{ programme.Evaluationprogramme }}</td>
					</tr>
					<tr>
						<th>Difficuly </th>
						<td>{{ programme.Difficulteprogramme }}</td>
					</tr>
					<tr>
						<th>Exercice List</th>
						<td>
							{% if programme.Listexercice is not empty %}
								<table class="table">
									<thead>
										<th>Nom Exercice</th>
										<th>Difficulte Exercice</th>
										<th>Evaluation Exercice</th>
										<th>Muscle</th>
									</thead>

									{% for  exercice in programme.getListexercice() %}
										<tbody>
											<td>{{ exercice.getnomexercice() }}</td>
											<td>{{ exercice.getDifficulteExercice() }}</td>
											<td>{{ exercice.getEvaluationexercice() }}</td>
											<td>{{ exercice.getMuscle() }}</td>
										</tbody>
									{% endfor %}

								</table>

							{% else %}
								No Exercices associated with this Programme.
							{% endif %}
						</td>
					</tr>
				</tbody>

				
				<tr>
					<th>Edit/Delete</th>
					<td class="d-flex justify-content-center align-items-center">
						<div><a class="btn flosun-button primary-btn rounded-0 mr-2" href="{{ path('app_programme_edit', {'id': programme.idprogramme}) }}" style="width: 120px;">Update</a></div>
						<div style="margin-left:50px"><a class="btn flosun-button primary-btn rounded-0 ml-2" href="{{ path('app_programme_delete', {'id': programme.idprogramme}) }}" style="width: 120px;">Delete</a></div>
					</td>
				</tr>

			</tr>
		</table>
</div>
{% endblock %}
