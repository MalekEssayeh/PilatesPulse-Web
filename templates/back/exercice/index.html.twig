{% extends 'base.html.twig' %}

{% block title %}Exercice index
{% endblock %}

{% block body %}

	<div class="container">
		<div class="page-title">Exercices Index</div>

		<div class="row">
			{% for exercice in exercices %}
				<div class="cardd">
					<div class="card__header">
						<img src="{{ asset('uploads/' ~ exercice.Demonstration) }}" class="card__image" width="600">
					</div>
					<div class="card__body">
						<h4>{{ exercice.nomexercice }}</h4>
						{% if exercice.Muscle =="Cuisses" %}
							<span class="tag tag-blue">{{ exercice.Muscle }}</span>
						{% elseif exercice.Muscle =="Abdominaux" %}
							<span class="tag tag-brown">{{ exercice.Muscle }}</span>
						{% elseif exercice.Muscle =="PlancherPelvin" %}
							<span class="tag tag-1">{{ exercice.Muscle }}</span>
						{% elseif exercice.Muscle =="Dos" %}
							<span class="tag tag-2">{{ exercice.Muscle }}</span>
						{% elseif exercice.Muscle =="Fessiers" %}
							<span class="tag tag-3">{{ exercice.Muscle }}</span>
						{% elseif exercice.Muscle =="Bras" %}
							<span class="tag tag-5">{{ exercice.Muscle }}</span>
						{% elseif exercice.Muscle =="StabilisateurEpaule" %}
							<span class="tag tag-4">{{ exercice.Muscle }}</span>
						{% else %}
							<span class="tag tag-red">{{ exercice.Muscle }}</span>
						{% endif %}
					</div>
					<div class="card__footer">
						<a href="{{ path('app_exercice_show', {'id': exercice.id}) }}" class="genric-btn success-border circle">More</a>
						<a href="{{ path('app_exercice_edit', {'id': exercice.id}) }}" class="genric-btn info-border circle">Update</a>
						<a href="{{ path('app_exercice_delete', {'id': exercice.id}) }}" class="genric-btn danger-border circle">Delete</a>
					</div>
					<div class="qr-code">
						<img src="{{ ExerciceRepository.QRcode(exercice.nomexercice, exercice.Difficulteexercice,exercice.Muscle, exercice.EvaluationExercice) }}" alt="QR Code">
					</div>
				</div>
			{% endfor %}

		</div>

		<a href="{{ path('app_exercice_new') }}">Create New</a>
	</div>
{% endblock %}
