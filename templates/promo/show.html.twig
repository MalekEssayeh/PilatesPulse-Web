{% extends 'base.html.twig' %}

{% block title %}Promo{% endblock %}

{% block body %}
    <h1>Promo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ promo.code }}</td>
            </tr>
            <tr>
                <th>Pourcentage</th>
                <td>{{ promo.pourcentage }}</td>
            </tr>
            <tr>
                <th>Validite</th>
                <td>{{ promo.validite ? promo.validite|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ promo.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_promo_index') }}">back to list</a>

    <a href="{{ path('app_promo_edit', {'code': promo.code}) }}">edit</a>

    {{ include('promo/_delete_form.html.twig') }}
{% endblock %}
