{% extends 'Admin.html.twig' %}

{% block title %}Promo index{% endblock %}

{% block body %}
    <h1>Discount Codes</h1>

    <table class="table" style="margin-top: 50px;" >
        <thead>
            <tr>
                <th>Code</th>
                <th>Pourcentage</th>
                <th>Validite</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td>{{ promo.code }}</td>
                <td>{{ promo.pourcentage }}</td>
                <td>{{ promo.validite ? promo.validite|date('Y-m-d') : '' }}</td>
                <td>{{ promo.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_promo_show', {'code': promo.code}) }}">show</a>
                    <a href="{{ path('app_promo_edit', {'code': promo.code}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_promo_new') }}">Create new</a>
{% endblock %}
