{% extends 'base.html.twig' %}

{% block title %}Shoppingcart index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Style for the header */
        .header {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Style for the navbar */
        .navbar {
            background-color: #f8f9fa;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

        .navbar ul {
            list-style: none;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        .navbar li {
            display: inline-block;
            margin-right: 20px;
        }

        .navbar li:last-child {
            margin-right: 0;
        }

        .navbar a {
            text-decoration: none;
            color: #007bff;
        }

        .navbar a:hover {
            text-decoration: underline;
        }

        /* Style for the table */
        .table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ddd;
        }

        .table th, .table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        /* Style for the alert */
        .alert {
            position: relative;
            padding: 0.75rem 1.25rem;
            margin-bottom: 1rem;
            border: 1px solid transparent;
            border-radius: 0.25rem;
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
        }

        .alert-dismissible {
            padding-right: 4rem;
        }

        /* Style for the options links */
        .options {
            margin-bottom: 10px;
        }

        .options a {
            color: #007bff;
            margin-right: 10px;
            text-decoration: none;
        }

        .options a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="header">
        <h1>Shoppingcart index</h1>
    </div>

    <div class="navbar">
        <ul>
            <li><a href="{{ path('app_shoppingcart_new') }}">Create new</a></li>
        </ul>
    </div>

    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {% for message in app.flashes('success') %}
                {{ message|trans }}
            {% endfor %}
        </div>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const alert = document.querySelector('.alert');
                alert.classList.add('show');
                setTimeout(function() {
                    alert.classList.remove('show');
                }, 5000);
            });
        </script>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nameproduct</th>
                <th>Productdescription</th>
                <th>Priceproduct</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for shoppingcart in shoppingcarts %}
                <tr>
                    <td><img src="{{ asset('uploads/' ~ shoppingcart.image) }}" class="card__image" width="250" height="200"></td>
                    <td>{{ shoppingcart.nameproduct }}</td>
                    <td>{{ shoppingcart.productdescription }}</td>
                    <td>{{ shoppingcart.priceproduct }}</td>
                    <td>{{ shoppingcart.quantity }}</td>
                    <td>
                        {{ include('shoppingcart/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"></td>
                <td><strong>Total Price:</strong></td>
                <td>{{ totalPrice }}</td> {# Assuming total_price is passed to the template from the controller #}
            </tr>
        </tfoot>
    </table>
{% endblock %}
