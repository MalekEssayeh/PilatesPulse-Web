{% extends 'Admin.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <div style="margin-top:100px" class="page-title">   <h1>Session</h1></div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ session.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ session.description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ session.duration }}</td>
            </tr>
            <tr>
                <th>Coach_id</th>
                <td>{{ session.coachId }}</td>
            </tr>
            <tr>
                <th>Event_id</th>
                <td>{{ session.eventId }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ session.time ? session.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ session.date ? session.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if session.event.imageUrl %}
                        <img src="{{ asset('uploads/' ~ session.event.imageUrl) }}" alt="Event Image">
                    {% else %}
                        <p>No image available</p>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_session_index_admin') }}">back to list</a>

    <a href="{{ path('app_session_edit_admin', {'id': session.id}) }}">edit</a>

    {{ include('backend/session/_delete_form.html.twig') }}
{% endblock %}
