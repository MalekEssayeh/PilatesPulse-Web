{% extends 'Admin.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <div style="margin-top:100px" class="page-title"> <h1>Event index</h1></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>NbrParticipants</th>
                <th>Description</th>
                <th>Coach_id</th>
                <th>Image_url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                <td>{{ event.nbrParticipants }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.coachId }}</td>
                <td>{{ event.imageUrl }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new_admin') }}">Create new</a>
{% endblock %}
