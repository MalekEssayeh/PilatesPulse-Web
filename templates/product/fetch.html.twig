{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <div class="grid text-center d-flex flex-row gap-1" style="margin-left: 50px; margin-top: 50px; margin-bottom: 50px">
        <div style="margin-bottom: 50px; padding-bottom: 50px" class="g-col-6">
            <img src="{{ asset('uploads/' ~ product.image) }}" class="card__image" width="300" height="250">
        </div>

        <div class="g-col-4 " style="margin-left: 20px; margin-top: 50px">
            <p style="font-size: 3.5em; margin-left: 70px; color: #d191b2;">
                <strong>
                {{ product.nameproduct }}</p></strong>
            <p style="font-size: 2em;"><br>
                <strong>
                {{ product.productdescription }}</p></strong>
            <p style="font-size: 1.5em;"><br>
                <strong>Price :</strong>
                {{ product.priceproduct }} DT</p>
            <p style="font-size: 1.5em;">
                <strong>Rest in stock : </strong>
                {{ product.stock }}</p>
        </div>
    </div>
    <div style="position: absolute; bottom:200px; left: 50%; transform: translateX(-50%); margin-bottom: 20px; ">
        <a href="{{ path('app_product_shop') }}" class="genric-btn success-border circle ">Continue shopping</a>

        <a href="{{ path('add_to_cart',{idproduct : product.idproduct}) }}" class="genric-btn warning-border circle">Add to cart</a>
        <a href="{{ path('add_to_cart',{idproduct : product.idproduct}) }}" class="genric-btn danger-border circle">Add to wishlist</a>

    </div>
{% endblock %}


