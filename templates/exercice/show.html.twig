{% extends 'base.html.twig' %}

{% block body %}
	<div style="margin-top:100px" class="page-title">
		Exercice Details</div>

	<div style="margin-left:270px; margin-bottom:50px">
		<div class="single-product-main-area">
			<div class="containerr containerr-default custom-area">
				<div class="row">
					<div class="col-lg-5 offset-lg-0 col-md-8 offset-md-2 col-custom">
						<div class="product-details-img">
							<div class="single-product-img swiper-container gallery-top popup-gallery">
								<div class="swiper-wrapper">
									<div class="swiper-slide">
										<div class="video-container">
											<video autoplay muted loop style="width: 100%; height: 100%;" src="{{ asset('uploads/' ~ exercice.Video ) }}"></video>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-7 col-custom">
						<div class="product-summery position-relative">
							<div class="product-head mb-3">
								<h2 class="product-title">
									{{ exercice.nomExercice }}
								</h2>
							</div>
							{% if exercice.Muscle =="Cuisses" %}
								<span class="tag tag-blue">{{ exercice.Muscle }}</span>
							{% elseif exercice.Muscle =="Abdominaux" %}
								<span class="tag tag-brown">{{ exercice.Muscle }}</span>
							{% elseif exercice.Muscle =="PlancherPelvin" %}
								<span class="tag tag-1">{{ exercice.Muscle }}</span>
							{% elseif exercice.Muscle =="Dos" %}
								<span class="tag tag-2">{{ exercice.Muscle }}</span>
							{% elseif exercice.Muscle =="Fessiers" %}
								<span class="tag tag-3">{{ exercice.Muscle }}</span>
							{% elseif exercice.Muscle =="Bras" %}
								<span class="tag tag-5">{{ exercice.Muscle }}</span>
							{% elseif exercice.Muscle =="StabilisateurEpaule" %}
								<span class="tag tag-4">{{ exercice.Muscle }}</span>
							{% else %}
								<span class="tag tag-red">{{ exercice.Muscle }}</span>
							{% endif %}
						</div>
						<div class="price-box mb-2">
							<span class="regular-price">
								Difficulty:{{ exercice.DifficulteExercice }}
							</span>
						</div>
						<div class="product-rating mb-3">
							{% for i in 1..exercice.EvaluationExercice %}
								<i class="fa fa-star" style="color: gold;"></i>
							{% endfor %}
							{% for i in exercice.EvaluationExercice + 1..5 %}
								<i class="fa fa-star-o" style="color: gold;"></i>
							{% endfor %}
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
